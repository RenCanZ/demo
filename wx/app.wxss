}

.block-col{
	flex-direction:column;
	display:flex;
}
.block-col-bothcenter{
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}
.block-col-center{
	display:flex;
	flex-direction:column;
	justify-content:center;
}
.block-col-colcenter{
